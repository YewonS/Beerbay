<%- include('../global/header.ejs') %>
<%- include('../global/navbarHome.ejs') %>

<script src="./functionality/rating.js"></script>
<script>
    const user = "<%= user %>";
</script>

 <!-- css -->
 <link rel="stylesheet" type="text/css" href="./functionality/rating.css">

<h3> Welcome, <%= user %>. </h3>
<h5>Type in the name of the beer to add ratings. </h5>

    <div class="search">
        <p>
            <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Search by beer name</span>
            </div>
            <input type="text" class="form-control" id="search-beername" aria-describedby="basic-addon3">
            <div class="input-group-append">
                <button class="btn btn-warning add-rating-btn" type="button" data-toggle="modal" data-target="#ratings-modal">Add Rating</button>
              </div>
            </div>
        </p>
    </div>

    <div>
        <div class="modal" tabindex="-1" role="dialog" id="ratings-modal">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Add ratings</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <p>Rate the beer.</p>
                    <input type="checkbox" id="rate1" name="rate1" value="1">
                    <label for="rate1"> 1</label><br>
                    <input type="checkbox" id="rate2" name="rate2" value="2">
                    <label for="rate2"> 2</label><br>
                    <input type="checkbox" id="rate3" name="rate3" value="3">
                    <label for="rate3"> 3</label><br>
                    <input type="checkbox" id="rate4" name="rate4" value="4">
                    <label for="rate4"> 4</label><br>
                    <input type="checkbox" id="rate5" name="rate5" value="5">
                    <label for="rate5"> 5</label><br>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-warning save-btn">Save</button>
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
    </div>

<h3>Your ratings</h3>
    <table class="table table-dark ratings-table">
        <thead>
            <tr>
            <th scope="col">Beer</th>
            <th scope="col">Name</th>
            <th scope="col">Brewery</th>
            <th scope="col">Country</th>
            <th scope="col">ABV</th>
            <th scope="col">Category</th>
            <th scope="col">Ratings</th>
            </tr>
        </thead>
        <tbody class="ratings-tbody">
        
        </tbody>
    </table>


<%- include('../global/footer.ejs') %>